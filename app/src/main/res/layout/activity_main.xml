<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3E3E3E"
    tools:context=".MainActivity"
    android:fillViewport="true">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black" >

        <ImageView
            android:id="@+id/youtube_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="7.5dp"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/youtube_4_9" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/youtube_icon"
            android:text="Seung Tube"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />


        </RelativeLayout>  <!-- 상단바 -->

        <FrameLayout
            android:id="@+id/choonsik1"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/__9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="5dp"
                android:textSize="11dp"
                android:background="@color/black"
                android:padding="1dp"
                android:text="10:26" />

        </FrameLayout> <!-- 첫번째 동영상 이미지 -->

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/Icon_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:background="#3E3E3E"
                android:src="@drawable/_411042_thum_001_9" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="춘식이와 함께하는 겨울 플레이리스트"
                android:textStyle="bold"
                android:id="@+id/title_1"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Icon_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_below="@+id/title_1"
                android:text="아기 라이언 · 조회수 29만회 · 3일 전"
                android:textColor="@color/white"/>
            
        </RelativeLayout> <!-- 첫번째 동영상 정보 -->

        <FrameLayout
            android:id="@+id/choonsik2"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/ryan_1">

            <TextView
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="5dp"
                android:background="@color/black"
                android:padding="1dp"
                android:text="42:18" />

        </FrameLayout> <!-- 두번째 동영상 이미지 -->

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView

                android:id="@+id/Icon_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:src="@drawable/sad_ap" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Icon_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="춘식이와 라이언의 나른한 오후"
                android:textStyle="bold"
                android:id="@+id/title_2"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Icon_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_below="@+id/title_2"
                android:text="우는 어피치 · 조회수 14만회 · 9일 전"
                android:textColor="@color/white"/>

        </RelativeLayout> <!-- 두번째 동영상 정보 -->

        <FrameLayout
            android:id="@+id/choonsik3"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/halloween">

            <TextView
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="5dp"
                android:background="@color/black"
                android:padding="1dp"
                android:text="22:58" />

        </FrameLayout> <!-- 세번째 동영상 이미지 -->

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView

                android:id="@+id/Icon_3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:src="@drawable/prodo" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Icon_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="춘식이와 함께하는 할로윈"
                android:textStyle="bold"
                android:id="@+id/title_3"
                android:textColor="@color/white"/>

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Icon_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_below="@+id/title_3"
                android:text="신난 프로도 · 조회수 3만회 · 2일 전"
                android:textColor="@color/white"/>

        </RelativeLayout> <!-- 세번째 동영상 정보 -->


    </LinearLayout>


</ScrollView>